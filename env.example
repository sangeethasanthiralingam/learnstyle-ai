# LearnStyle AI Environment Configuration

# Flask Configuration
SECRET_KEY=your-secret-key-here-change-in-production
FLASK_ENV=development
FLASK_DEBUG=True

# Database Configuration
# MySQL Configuration (Primary)
MYSQL_USER=root
MYSQL_PASSWORD=your-mysql-password
MYSQL_HOST=localhost
MYSQL_PORT=3306
MYSQL_DATABASE=learnstyle_ai

# Alternative: Use DATABASE_URL for direct connection string
# DATABASE_URL=mysql+pymysql://username:password@localhost:3306/learnstyle_ai

# AI Integration
OPENAI_API_KEY=your-openai-api-key-here

# Optional: External Services
# REDIS_URL=redis://localhost:6379/0
# CELERY_BROKER_URL=redis://localhost:6379/0

